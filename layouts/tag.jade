//- tag.jade
extends page
block head
  section.Site--top-bar
    .Grid
      .row
        .gr-12
          a.Site--home-link(href='/') MudWetandBeers.com

  section.Site--header
    h1.Site--title=title

block content

  section
    .Grid
      .row
        each post in pagination.files
          div.Post-item
            h5.title
              a(href="/#{post.path}")
                =post.title

  section
    .Grid
      .row
        .gr-12
          if pagination.previous
            a(href="/#{pagination.previous.path}") Previous

          if pagination.next
            a(href="/#{pagination.next.path}") Next
