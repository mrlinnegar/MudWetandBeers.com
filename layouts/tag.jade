//- tag.jade
extends page
block head
  include partials/_top_bar.jade

  section.article--header-background(style="background-image:url(#{image});")
    .container
      .row
        .gr-12
          h1.article--title=title

block content

  section
    .container
      .row
        .gr-12
          - for (var i = 0; i < pagination.files.length; i = i + 2) {
            div

              if pagination.files[i]
                .gr-6
                  - walk = pagination.files[i]
                  include partials/article_card

              if pagination.files[i+1]
                .gr-6
                  - walk = pagination.files[i+1]
                  include partials/article_card
          - }


  section
    .container
      .row
        .gr-6
          if pagination.previous
            a(href="/#{pagination.previous.path.replace('index.html','')}") Previous
        .gr-6
          if pagination.next
            a(href="/#{pagination.next.path.replace('index.html','')}") Next
