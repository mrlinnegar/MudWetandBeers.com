//- tag.jade
extends page
block head
  section.Site--top-bar
    .Grid
      .row
        .gr-12
          a.Site--home-link(href='/') MudWetandBeers.com

  section.Site--header
    h1.Site--title=title

block content

  section
    .Grid
      - for (var i = 0; i < pagination.files.length; i = i + 2) {
        .row
          if pagination.files[i]
            - walk = pagination.files[i]
            include partials/walk

          if pagination.files[i+1]
            - walk = pagination.files[i+1]
            include partials/walk
      - }


  section
    .Grid
      .row
        .gr-12
          if pagination.previous
            a(href="/#{pagination.previous.path.replace('index.html','')}") Previous

          if pagination.next
            a(href="/#{pagination.next.path.replace('index.html','')}") Next
