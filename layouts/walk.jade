//- post.jade
extends page
block head
  section
    .Grid
      .row
        .Grid--cell
          a.Site--home-link(href='/') MudWetandBeers.com

block content
  section
    .Grid
      .row
        .Grid--cell
          h1.Article--title!= title

  section
    .Grid
      .row
        .Grid--cell
          div.details #{moment(publishDate).format("D MMM YYYY")}

  section
    .Grid
      .row
        .Grid--cell
          if tags && tags.length > 0
            .tags
              each tag, index in tags
                a(href="/#{tag.toLowerCase()}").tag #{tag}
                if index != tags.length -1
                  | ,

    .Grid
      .row
        .Grid--cell!= contents

    .Grid
      .row
        .Grid--cell
          #map

    .Grid
      .row
        .Grid--cell
         By #{author}
