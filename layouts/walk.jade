//- post.jade
extends layout
block content
  section
    .Grid
      .row
        .Grid--cell    
          div.details #{moment(publishDate).format("D MMM YYYY")}

  section
    .Grid
      .row
        .Grid--cell
          if tags && tags.length > 0
            .tags
              each tag, index in tags
                a(href="/#{tag.toLowerCase()}").tag #{tag} 
                if index != tags.length -1
                  | ,

    .Grid
      .row
        .Grid--cell!= contents
    
    .Grid
      .row
        .Grid--cell
          #map

    .Grid
      .row
        .Grid--cell
         By #{author}
