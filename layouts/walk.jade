//- post.jade
extends layout
block content
  .post-header
    div.details #{moment(publishDate).format("D MMM YYYY")}


  if tags && tags.length > 0
    .tags
      each tag, index in tags
        a(href="/#{tag.toLowerCase()}").tag #{tag}
        if index != tags.length -1
          | ,

  #map

  .post-content      
    div!= contents

    div By #{author}
