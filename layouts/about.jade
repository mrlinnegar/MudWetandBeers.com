//- page.jade
extends page

block head
  section.site--top-bar
    .container
      .row
        .gr-12
          a.Site--home-link(href='/') MudWetandBeers.com

block content
  section.Article--header-background(style="background-image:url(#{image});")
    .container
      .row
        .gr-12.Article--header
          h1.Article--title!= title

    .container
      .row
        .gr-12
          div!= contents

          h3 Build Number:
            em!= site.build_number
            span .

          h3 Last Built:
            em!= moment(site.build_time).format("h:mma D MMM YYYY")
            span .
