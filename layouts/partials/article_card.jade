.article-card
  .row
    .gr-6.article-card--image(style="background-image:url(/#{walk.path}#{walk.image})")

    .gr-6
      a(href="/region/#{walk.regionUrlSafe}/").article-card--tag
        =walk.region

      span.article-card--date
        =walk.publishDate

      a(href="/#{walk.path}")
        h2.article-card--title
          =walk.title

      p.article-card--leader
        =walk.lead
